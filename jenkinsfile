pipeline {
    agent any
    tools {
        jdk 'jdk11'
        maven 'maven3'
    }
    environment {
        NEXUS_REGISTRY = 'http://172.17.7.99:8082'
        DOCKER_IMAGE_NAME = 'boardgame-app'
        K8S_NAMESPACE = 'boardgame'
        K8S_MASTER = 'https://172.17.7.95:6443'
        APP_VERSION = "${BUILD_NUMBER}"
    }
    stages {
        stage('Git Checkout') {
            steps {
                git branch: 'main', credentialsId: 'github-token', url: 'https://github.com/killsmokker/ak-cicd.git'
            }
        }
        
        stage('Compile') {
            steps {
                sh "mvn compile"
            }
        }
        
        stage('Test') {
            steps {
                sh "mvn test"
                junit '**/target/surefire-reports/*.xml'
            }
        }
        
        stage('File System Scan') {
            steps {
                sh "trivy fs --format table -o trivy-fs-report.html ."
                archiveArtifacts 'trivy-fs-report.html'
            }
        }
        
        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonar') {
                    withCredentials([string(credentialsId: 'sonartoken', variable: 'SONAR_TOKEN')]) {
                        sh """
                            mvn sonar:sonar \
                                -Dsonar.projectKey=BoardGame \
                                -Dsonar.projectName=BoardGame \
                                -Dsonar.coverage.jacoco.xmlReportPaths=target/site/jacoco/jacoco.xml \
                                -Dsonar.login=$SONAR_TOKEN
                        """
                    }
                }
            }
        }
        
        stage('Quality Gate') {
            steps {
                timeout(time: 15, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }
        
        stage('Build Package') {
            steps {
                sh "mvn clean package -DskipTests"
                archiveArtifacts 'target/*.jar'
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'nexus', toolName: 'docker') {
                        sh """
                            docker build -t ${NEXUS_REGISTRY}/docker-hosted/${DOCKER_IMAGE_NAME}:${APP_VERSION} .
                            docker tag ${NEXUS_REGISTRY}/docker-hosted/${DOCKER_IMAGE_NAME}:${APP_VERSION} ${NEXUS_REGISTRY}/docker-hosted/${DOCKER_IMAGE_NAME}:latest
                        """
                    }
                }
            }
        }
        
        stage('Docker Image Scan') {
            steps {
                sh "trivy image --format table -o trivy-image-report.html ${NEXUS_REGISTRY}/docker-hosted/${DOCKER_IMAGE_NAME}:latest"
                archiveArtifacts 'trivy-image-report.html'
            }
        }
        
        stage('Push Docker Image to Nexus') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'nexus', toolName: 'docker') {
                        sh """
                            docker push ${NEXUS_REGISTRY}/docker-hosted/${DOCKER_IMAGE_NAME}:${APP_VERSION}
                            docker push ${NEXUS_REGISTRY}/docker-hosted/${DOCKER_IMAGE_NAME}:latest
                        """
                    }
                }
            }
        }
        
        stage('Deploy To Kubernetes') {
            steps {
                withKubeConfig(
                    credentialsId: 'kubeconfig', 
                    namespace: "${K8S_NAMESPACE}",
                    serverUrl: "${K8S_MASTER}"
                ) {
                    sh """
                        # Create namespace if not exists
                        kubectl create namespace ${K8S_NAMESPACE} --dry-run=client -o yaml | kubectl apply -f -
                        
                        # Update deployment with new image
                        kubectl set image deployment/boardgame-app boardgame-app=${NEXUS_REGISTRY}/docker-hosted/${DOCKER_IMAGE_NAME}:${APP_VERSION} -n ${K8S_NAMESPACE} --record || true
                        
                        # Apply Kubernetes manifests
                        kubectl apply -f k8s-deployment.yaml -n ${K8S_NAMESPACE} || true
                        kubectl apply -f k8s-service.yaml -n ${K8S_NAMESPACE} || true
                        kubectl apply -f k8s-ingress.yaml -n ${K8S_NAMESPACE} || true
                    """
                }
            }
        }
        
        stage('Verify Deployment') {
            steps {
                withKubeConfig(
                    credentialsId: 'kubeconfig',
                    namespace: "${K8S_NAMESPACE}", 
                    serverUrl: "${K8S_MASTER}"
                ) {
                    sh """
                        echo "=== Checking Deployment Status ==="
                        kubectl rollout status deployment/boardgame-app -n ${K8S_NAMESPACE} --timeout=300s || true
                        
                        echo "=== Checking Pods ==="
                        kubectl get pods -n ${K8S_NAMESPACE} -l app=boardgame-app || true
                        
                        echo "=== Checking Services ==="
                        kubectl get svc -n ${K8S_NAMESPACE} || true
                        
                        echo "=== Checking Ingress ==="
                        kubectl get ingress -n ${K8S_NAMESPACE} || true
                    """
                }
            }
        }
    }
    post {
        always {
            script {
                def jobName = env.JOB_NAME
                def buildNumber = env.BUILD_NUMBER
                def pipelineStatus = currentBuild.result ?: 'SUCCESS'
                def bannerColor = pipelineStatus == 'SUCCESS' ? 'green' : 'red'
                
                def body = """
                <html>
                <body>
                <div style="border: 4px solid ${bannerColor}; padding: 10px;">
                    <h2>${jobName} - Build ${buildNumber}</h2>
                    <div style="background-color: ${bannerColor}; padding: 10px;">
                        <h3 style="color: white;">Pipeline Status: ${pipelineStatus}</h3>
                    </div>
                    <p><strong>Application:</strong> BoardGame Java Application</p>
                    <p><strong>Version:</strong> ${APP_VERSION}</p>
                    <p><strong>Docker Image:</strong> ${NEXUS_REGISTRY}/docker-hosted/${DOCKER_IMAGE_NAME}:${APP_VERSION}</p>
                    <p><strong>Namespace:</strong> ${K8S_NAMESPACE}</p>
                    <p><strong>Test Credentials:</strong></p>
                    <ul>
                        <li>User: bugs / bunny</li>
                        <li>Manager: daffy / duck</li>
                    </ul>
                    <p>Check the <a href="${BUILD_URL}">console output</a> for details.</p>
                </div>
                </body>
                </html>
                """
                
                emailext (
                    subject: "BoardGame App - Build ${buildNumber} - ${pipelineStatus}",
                    body: body,
                    to: 'your-email@yourcompany.com',
                    mimeType: 'text/html',
                    attachmentsPattern: 'trivy-fs-report.html,trivy-image-report.html'
                )
            }
        }
        
        success {
            script {
                echo "üéâ Pipeline completed successfully! BoardGame app is deployed."
                echo "üìù Test with: username: bugs | password: bunny (user role)"
                echo "üìù Test with: username: daffy | password: duck (manager role)"
                echo "üåê Access at: http://boardgame.172.17.7.95.nip.io"
            }
        }
        
        failure {
            script {
                echo "‚ùå Pipeline failed! Check the logs for details."
            }
        }
    }
}
